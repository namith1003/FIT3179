{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Inflation For All Countries by Year",
  "width": 1300,
  "height": 800,
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "Year",
      "value": 2022
    }
  ],
  "config": {
    "font": "almarai",
    "background":"#FFEEB6",
    "style": {"cell": {"stroke": "transparent"}}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/namith1003/FIT3179/main/oceans.json",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "#a4deee"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/namith1003/FIT3179/main/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME_EN",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/namith1003/FIT3179/main/pivoted_global_inflation.csv"
      },
      "transform": [
        {
          "lookup": "Country_Code",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/namith1003/FIT3179/main/ne_110m.json",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.ISO_A3_EH"
          },
          "as": "geo"
        },
        {
          "filter": "datum.Year == Year"
        },
        {
          "calculate": "datum.Inflation",
          "as": "Inflation"
        }
      ],
      "layer": [
        {
          "data": {
            "graticule": {
              "step": [30, 30]
            }
          },
          "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5}
        },
        {
          "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "color": {
              "field": "Inflation",
              "type": "quantitative",
              "scale": {
                "domain": [0, 10, 20, 50, 100, 500],
                "range": ["#FDD9B3", "#FDB475", "#F87E2B", "#E96111", "#EC6514", 
                "#D74E06", "#A13403"],
                "type": "threshold"
              },
              "title": "Inflation %",
            "legend": {
              "orient": "bottom-left", 
              "direction": "horizontal", 
              "strokeColor": "black",
              "fillColor": "white",
              "padding": 3,
              "title": "Inflation %",
              "values": [0, 10, 50, 100, 500]
            }
            },
            "tooltip": [
              {"field": "properties.NAME", "type": "nominal", "title": "Country"},
              {"field": "Inflation", "type": "quantitative", "title": "Inflation"}
            ]
          }
        }
      ]
    }
  ]
}

