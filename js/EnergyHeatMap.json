{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",  
  "height": 400,
  "width":750,
  "data": {"url": "https://raw.githubusercontent.com/namith1003/FIT3179/main/pivot_average.csv"},
  "mark": {"type": "line", "point": true},
  "transform": [
    {"filter": {"field": "Year", "oneOf": [1970, 2022]}
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "scale": {"padding": 0.5}
    },
    "y": {
      "aggregate": "median",
      "field": "Average Headline Inflation",
      "type": "quantitative",
      "title": "Average Inflation"
    },
    "color": {"field": "Continent", "type": "nominal",
    "legend": null},
    "tooltip": [
      {"field": "Year", "title": "Year"},
      {"field": "Average Headline Inflation", "title": "Average Inflation"}
    ]
  },
  "config": {
    "axis": {"tickBand": "extent"},
    "font": "almarai",
    "background": "#FFEEB6",
    "style": {"cell": {"stroke": "transparent"}}
  }
}
